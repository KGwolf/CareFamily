/* 页面基础样式 */
page {
  background-color: #f9fafb;
  height: 100%;
  -webkit-overflow-scrolling: touch; /* 开启硬件加速，提升滚动顺滑度 */
}

.page-container {
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

/* 顶部信息栏 */
.top-bar {
  padding: 40rpx 0 20rpx;
}
.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}
.family-count {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

/* 家人列表 */
.family-list {
  margin-top: 20rpx;
}

/* 滑动容器：关键优化：固定高度 + 硬件加速 */
.slide-wrap {
  position: relative;
  width: 100%;
  height: 140rpx; /* 与卡片高度一致 */
  margin-bottom: 20rpx;
}

/* 家人卡片：关键优化：统一rpx单位 + 更顺滑的过渡 */
.family-card {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 140rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.04);
  z-index: 2;
}

/* 头像占位 */
.avatar-wrap {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.avatar-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 信息区域 */
.info-wrap {
  flex: 1;
  margin-left: 24rpx;
}
.family-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}
.sub-info {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}
.age-text {
  font-size: 26rpx;
  color: #666;
}
.relation-tag {
  font-size: 22rpx;
  color: #42b983;
  background-color: #f0fdf4;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  margin-left: 12rpx;
}



/* 空列表提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 200rpx;
}
.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.6;
}
.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 悬浮添加按钮 */
.add-btn {
  position: fixed;
  right: 40rpx;
  bottom: 80rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background-color: #42b983;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(66, 185, 131, 0.3);
  transition: all 0.2s ease;
  z-index: 10;
}

.add-btn:active {
  transform: scale(0.95);
  background-color: #359469;
}
.add-btn-text {
  font-size: 48rpx;
  color: #fff;
  line-height: 96rpx;
}


/* 左滑按钮区（横向排列） */
/* 穿透Vant组件的shadow-root，强制按钮容器横向 */
.van-swipe-cell__right {
  display: flex !important;
  flex-direction: row !important;
  height: 120rpx !important;
}

/* 按钮容器：强制横向 */
.swipe-btn-wrapper {
  display: flex !important;
  flex-direction: row !important;
  height: 100% !important;
}

/* 按钮本身：最终样式 */
.swipe-btn-wrapper .btn {
  width: 140rpx !important;
  height: 100% !important;
  font-size: 24rpx !important;
  line-height: 120rpx !important;
  margin: 0 !important;
  padding: 0 !important;
  border-radius: 0 !important;
  color: #fff !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

/* 按钮颜色 */
.btn.edit { background-color: #666 !important; }
.btn.remind { background-color: #07c160 !important; }
.btn.delete { background-color: #f53f3f !important; }
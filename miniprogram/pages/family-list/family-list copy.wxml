<!--family-list.wxml-->
<navigation-bar title="关爱家人小助手" back="{{true}}" color="black" background="#FFF"></navigation-bar>
<view class="family-list">
  <block wx:for="{{familyList}}" wx:key="id">
    <navigator url="/pages/family-detail/family-detail?id={{item.id}}" class="family-item">
      <image src="{{item.avatar}}" mode="aspectFill" class="avatar"></image>
      <text class="name">{{item.name}} ({{item.age}}岁)</text>
    </navigator>
  </block>
</view>

<!-- WXML：自定义按钮组件 -->
<app-button
  text="添加家人"
  type="primary"
  catchtap="handleMyBtnClick"
/>
 
   
/* 页面基础样式 */
page {
  background-color: #f9fafb;
  height: 100%;
  -webkit-overflow-scrolling: touch; /* 开启硬件加速，提升滚动顺滑度 */
}

.page-container {
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

/* 顶部信息栏 */
.top-bar {
  padding: 40rpx 0 20rpx;
}
.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}
.family-count {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

/* 家人列表 */
.family-list {
  margin-top: 20rpx;
}

/* 滑动容器：关键优化：固定高度 + 硬件加速 */
.slide-wrap {
  position: relative;
  width: 100%;
  height: 140rpx; /* 与卡片高度一致 */
  margin-bottom: 20rpx;
  overflow: hidden; /* 隐藏超出容器的内容 */
  transform: translateZ(0); /* 开启硬件加速，提升滑动流畅度 */
}

/* 操作栏：关键优化：固定宽度（确保按钮完整显示） */
.action-bar {
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  display: flex;
  z-index: 1;
  width: 390rpx; /* 增加宽度，确保三个按钮完整显示（每个按钮130rpx） */
}
.action-btn {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 25rpx;
  box-sizing: border-box;
  flex: 1; /* 三个按钮平分宽度 */
  min-width: 130rpx; /* 固定最小宽度，防止按钮挤压 */
}
.action-btn.edit {
  background-color: #1890ff; /* 编辑：蓝色 */
}
.action-btn.add-tip {
  background-color: #42b983; /* 添加提醒：绿色 */
}
.action-btn.delete {
  background-color: #e63946; /* 删除：红色 */
}
.action-text {
  font-size: 28rpx;
  color: #fff;
  white-space: nowrap;
  text-align: center;
}

/* 家人卡片：关键优化：统一rpx单位 + 更顺滑的过渡 */
.family-card {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 140rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.04);
  z-index: 2;
  /* 优化过渡：使用transform + opacity，开启硬件加速，更顺滑 */
  transition: transform 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94); 
  transform: translateZ(0); /* 硬件加速 */
}
/* 点击态兼容滑动偏移，不卡顿 */
.family-card:active {
  transform: scale(0.99) translateX(var(--slide-offset, 0rpx));
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.03);
  transition: transform 0.1s ease;
}

/* 头像占位 */
.avatar-wrap {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.avatar-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 信息区域 */
.info-wrap {
  flex: 1;
  margin-left: 24rpx;
}
.family-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}
.sub-info {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}
.age-text {
  font-size: 26rpx;
  color: #666;
}
.relation-tag {
  font-size: 22rpx;
  color: #42b983;
  background-color: #f0fdf4;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  margin-left: 12rpx;
}

/* 滑动提示箭头 */
.slide-arrow {
  color: #ccc;
}

/* 空列表提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 200rpx;
}
.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.6;
}
.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 悬浮添加按钮 */
.add-btn {
  position: fixed;
  right: 40rpx;
  bottom: 80rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background-color: #42b983;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(66, 185, 131, 0.3);
  transition: all 0.2s ease;
  z-index: 10;
  transform: translateZ(0); /* 硬件加速 */
}
.add-btn:active {
  transform: scale(0.95);
  background-color: #359469;
}
.add-btn-text {
  font-size: 48rpx;
  color: #fff;
  line-height: 96rpx;
}
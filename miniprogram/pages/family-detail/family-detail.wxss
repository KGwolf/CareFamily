/* pages/family/detail.wxss */
.page {
  height: 100vh;
  display: flex; /* 用flex布局控制子元素高度 */
  flex-direction: column; /* 垂直排列 */
  min-height: 100vh;
  background: #f6f7f9;
  padding: 24rpx;
  box-sizing: border-box;
}

/* 通用卡片 */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
}

/* 家人卡 */
.family-card {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top:20rpx;
}

.family-main {
  display: flex;
  align-items: center;
}


/* 头像占位 */
.avatar-wrap {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.avatar-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}
.family-info .name {
  font-size: 36rpx;
  font-weight: 600;
  color: #111;
  margin-left:20rpx;
}

.family-info .meta {
  font-size: 24rpx;
  color: #888;
  margin-top: 6rpx;
  margin-left:20rpx;
}

.remark {
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
}

.remark-label {
  color: #999;
}

.edit-tip {
  font-size: 26rpx;
  color: #576595;
  align-self: flex-end;
}

/* 提醒区 */


.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 32rpx 0 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
}

.add-btn {
  font-size: 26rpx;
  color: #576b95;
}

/* 提醒规则项 */
.slide-wrap {
  display: flex;
  align-items: center;
  /* width: 100%; */
  height: 100rpx; /* 与卡片高度一致 */
  margin: 20rpx;
   border: 1rpx solid #e5e5e5; /* 灰色边框（1rpx 是小程序常用细边框） */
  border-radius: 30rpx; /* 圆角大小，可根据需求调整（比如 8rpx/20rpx） */
}


.reminder-left {
  width: 180rpx;
}

.time {
  font-size: 28rpx;
  color: #333;
}

.cycle {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 右侧内容区域：多行溢出省略号 */
.reminder-right {
  flex: 1;
  /* 核心代码：实现多行省略 */
  display: -webkit-box;
  -webkit-line-clamp: 2; /* 限制在 2 行内 */
  -webkit-box-orient: vertical; /* 从上到下垂直排列子元素 */
  overflow: hidden; /* 隐藏溢出内容 */
  text-overflow: ellipsis; /* 溢出显示... */
  /* 可选：增加行高，让两行文字间距更舒适 */
  line-height: 1.5; 
}

.content {
  font-size: 30rpx;
  color: #222;
}

/* 滚动区域 */
.scroll-area {
  flex: 1;              /* 核心 */
  overflow: hidden;     /* 防止 page 滚动 */
}
/* 空状态提示 */
.empty-tip {
  height: 100%; /* 关键：填充scroll-view的高度 */
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 1rpx 5rpx rgba(0,0,0,0.06);
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}


/* 事项卡片 */
.task-card {
  width: 100%;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 1rpx 5rpx rgba(0,0,0,0.06);
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.name-wrap {
  display: flex;
  align-items: center;
}
.name-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-right: 10rpx;
}
.age-text {
  font-size: 24rpx;
  color: #999;
}

/* 事项列表 */
.task-list {
  width: 100%;
}

.task-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.task-item:last-child {
  margin-bottom: 0;
}

.icon-clock {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.time-text {
  font-size: 26rpx;
  color: #999;
  margin-right: 15rpx;
  width: 120rpx;
}
.task-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

/* 提醒列表底部间距 */
.list-bottom-space {
  height: 40rpx; /* 可根据需求调整高度，比如30rpx/50rpx */
}

.reminder-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 4rpx;
}

/* 提示样式 */
.swipe-tip {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #42b983;
  margin-left: 30rpx;
  margin-right: auto;
}

.tip-text {
  margin-left: 6rpx;
}

/* 按钮容器：强制横向 */
.swipe-btn-wrapper {
  display: flex !important;
  flex-direction: row !important;
  height: 100% !important;
}

/* 按钮本身：最终样式 */
.swipe-btn-wrapper .btn {
  width: 140rpx !important;
  height: 100% !important;
  font-size: 24rpx !important;
  line-height: 120rpx !important;
  margin: 0 !important;
  padding: 0 !important;
  border-radius: 0 !important;
  color: #fff !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

/* 按钮颜色 */
.btn.edit { background-color: #666 !important; }
.btn.remind { background-color: #07c160 !important; }
.btn.delete { background-color: #f53f3f !important; }

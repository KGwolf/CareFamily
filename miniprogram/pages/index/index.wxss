/* 1. 基础容器：确保宽度撑满，不留白边 */
.container {
  width: 100%;
  box-sizing: border-box; /* 极其重要：防止padding撑破布局 */
  padding: 30rpx;
  background-color: #F8F9FA;
  min-height: 100vh;
}

/* 2. 统计卡片：修复内部居中和间距 */
.stats-card {
  width: 100%;
  box-sizing: border-box;
  background: linear-gradient(135deg, #FF7E95 0%, #FF5177 100%);
  border-radius: 32rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 12rpx 30rpx rgba(255, 81, 119, 0.2);
  margin-bottom: 40rpx;
}

.circle-text {
  flex-shrink: 0; /* 防止圆环被挤压 */
  width: 130rpx;
  height: 130rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
  font-weight: bold;
}

/* 3. 对象切换栏：修复无法横向滑动和挤压的问题 */
.avatar-scroll {
  width: 100%;
  white-space: nowrap; /* 强制不换行 */
  margin-bottom: 40rpx;
  height: 180rpx; /* 给够高度防止下方文字被切掉 */
}

.avatar-item {
  display: inline-flex; /* 关键：确保在滚动容器内横向排列 */
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  vertical-align: top;
}

.avatar-img {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: #E9ECEF;
  margin-bottom: 15rpx;
  border: 4rpx solid #fff;
  transition: all 0.3s;
}

.active .avatar-img {
  border-color: #FF5177;
  box-shadow: 0 4rpx 15rpx rgba(255, 81, 119, 0.3);
}

.active text {
  color: #FF5177;
  font-weight: bold;
}

/* 4. 任务卡片：修复宽度，使其像App一样精致 */
.task-section {
  width: 100%;
}

.task-card {
  width: 100%;
  box-sizing: border-box; /* 确保padding包含在width内 */
  background: #FFFFFF;
  border-radius: 28rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.04);
}

.task-icon {
  width: 90rpx;
  height: 90rpx;
  background: #FFF0F3;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  margin-right: 25rpx;
  flex-shrink: 0;
}

.task-content {
  flex: 1; /* 撑开中间区域 */
  overflow: hidden;
}

.task-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.task-desc {
  font-size: 26rpx;
  color: #999;
}

/* 修复按钮：在微信中按钮默认有最小宽度，需要强制覆盖 */
.btn-check {
  min-width: 120rpx !important;
  width: 120rpx !important;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 !important;
  background: #FF5177 !important;
  color: white !important;
  font-size: 26rpx;
  border-radius: 32rpx;
  margin: 0 !important;
  margin-left: 20rpx !important;
}
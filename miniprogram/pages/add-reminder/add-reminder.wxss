/* 页面全局样式 */
page {
  background-color: #f8f9fa;
}

.reminder-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 导航栏样式 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 24rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #ebebeb;
  position: sticky;
  top: 0;
  z-index: 10;
}

.back-btn {
  font-size: 28rpx;
  color: #333333;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  margin: 0;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.empty-btn {
  width: 80rpx;
}

/* 表单容器 */
.form-container {
  flex: 1;
  padding: 24rpx;
}

.form-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.form-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-value {
  font-size: 30rpx;
  color: #333333;
  line-height: 1.5;
}

.placeholder {
  color: #999999;
}

/* 提醒对象样式 */
.family-value {
  display: flex;
  align-items: center;
}

.family-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.family-avatar text {
  font-size: 28rpx;
  color: #333333;
}

.family-name {
  font-size: 32rpx;
  font-weight: 600;
}

/* 频率选择样式 */
.frequency-list {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.frequency-item {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #666666;
  cursor: pointer;
  transition: all 0.2s ease;
}

.frequency-item.active {
  background-color: #07c160;
  color: #ffffff;
}

.custom-date-picker {
  margin-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 16rpx;
}

/* 内容输入框样式 */
.content-textarea {
  width: 100%;
  height: 160rpx;
  padding: 16rpx;
  font-size: 28rpx;
  color: #333333;
  border: 1rpx solid #ebebeb;
  border-radius: 12rpx;
  resize: none;
  box-sizing: border-box;
  line-height: 1.6;
}

.content-textarea::placeholder {
  color: #999999;
}

/* 保存按钮样式 */
.save-btn-wrap {
  padding: 24rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #ebebeb;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #07c160;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 44rpx;
  border: none;
}

.save-btn[disabled] {
  background-color: #cccccc;
  color: #ffffff;
  cursor: not-allowed;
}


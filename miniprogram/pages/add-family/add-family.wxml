
  <!-- 顶部状态栏占位（适配小程序胶囊） -->
  <navigation-bar id="navigationBar" title="添加家人信息" back="{{true}}" color="black" background="#FFF"></navigation-bar>

<view class="page-container">
  <!-- 表单区域 -->
  <view class="form-content">
    <!-- 姓名输入项 -->
    <view class="form-item">
      <view class="form-label">
        <text class="label-text">家人姓名</text>
        <text class="required">*</text>
      </view>
      <input 
        class="form-input" 
        placeholder="请输入家人姓名（如：妈妈、张三）"
        placeholder-class="placeholder-style"
        value="{{name}}"
        bindinput="onNameInput"
      />
    </view>

    <!-- 年龄输入项 -->
    <view class="form-item">
      <view class="form-label">
        <text class="label-text">家人年龄</text>
        <text class="required">*</text>
      </view>
      <input 
        class="form-input" 
        type="number"
        placeholder="请输入有效年龄（如：72）"
        placeholder-class="placeholder-style"
        value="{{age}}"
        bindinput="onAgeInput"
      />
    </view>

    <!-- 性别选择项 -->
    <view class="form-item">
      <view class="form-label">
        <text class="label-text">家人性别</text>
        <text class="required">*</text>
      </view>
      <view class="gender-select">
        <view 
          class="gender-item {{gender === 'male' ? 'active' : ''}}"
          bindtap="selectGender"
          data-type="male"
        >
          <text class="gender-text">男</text>
        </view>
        <view 
          class="gender-item {{gender === 'female' ? 'active' : ''}}"
          bindtap="selectGender"
          data-type="female"
        >
          <text class="gender-text">女</text>
        </view>
      </view>
    </view>

<!-- 与本人关系 -->
<view class="form-item">
  <view class="form-label">
    <text class="label-text">与本人关系</text>
  </view>
  <picker 
    class="form-picker-wrapper"
    mode="selector"
    range="{{relationOptions}}"
    value="{{relationIndex}}"
    bindchange="onRelationChange"
    catchtap="onPickerTap" 
  >
    <!-- 内部的 view 负责展示所有样式 -->
    <view class="form-picker {{relationIndex > 0 ? 'active' : ''}}">
      <view class="picker-text">
        {{relationOptions[relationIndex] || '请选择关系'}}
      </view>
      <view class="picker-arrow"></view>
    </view>
  </picker>
</view>

<!-- 备注 -->
<view class="form-item">
      <view class="form-label">
        <text class="label-text">备注</text>
      </view>
      <textarea 
        class="form-textarea" 
        placeholder="请输入备注信息"
        placeholder-class="placeholder-style"
        value="{{remark}}"
        bindinput="onRemarkInput"
      />
    </view>

    <!-- 底部保存按钮 -->
    <app-button
  text="保存"
  type="primary"
  bind:tap="saveFamilyInfo"
/>
  </view>

  
</view>

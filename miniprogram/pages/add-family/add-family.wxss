/* pages/add-family/add-family.wxss */
page {
  background-color: #f7f8fa;
  height: 100%;
}

.page-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 导航栏样式 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.06);
  box-sizing: border-box;
}

.nav-back {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 表单区域样式 */
.form-content {
  flex: 1;
  padding: 30rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

.form-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 28rpx 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  box-sizing: border-box;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.required {
  color: #e53e3e;
  font-size: 32rpx;
  margin-left: 8rpx;
}

.form-textarea {
  height: 200rpx; /* 增加高度，避免文字被截断 */
  width: 100%;
  font-size: 30rpx;
  color: #333;
  padding: 12rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f0f0f0;
}

.placeholder-style {
  color: #999;
  font-size: 28rpx;
}

/* 性别选择样式 */
.gender-select {
  display: flex;
  gap: 40rpx;
  padding: 10rpx 0;
}

.gender-item {
  width: 180rpx;
  height: 96rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.gender-item.active {
  background-color: #42b983;
}

.gender-text {
  font-size: 30rpx;
  color: #666;
  transition: all 0.2s ease;
}

.gender-item.active .gender-text {
  color: #fff;
  font-weight: 500;
}

/* 保存按钮样式 */
.save-btn-wrap {
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #f7f8fa;
}

.save-btn {
  width: 100%;
  height: 96rpx;
  background-color: #42b983;
  color: #fff;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(66, 185, 131, 0.3);
  transition: all 0.2s ease;
}

.save-btn:active {
  background-color: #359469;
  box-shadow: 0 2rpx 8rpx rgba(66, 185, 131, 0.5);
  transform: scale(0.98);
}

/* 去除原生button默认样式 */
button {
  margin: 0;
  padding: 0;
}

/* 关系选择器容器 */
.form-picker {
  display: block;
  height: 80rpx;
  border: 1px solid #eee;
  border-radius: 12rpx; /* 增大圆角 */
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between; /* 文字左对齐，箭头右对齐 */
  padding: 0 20rpx;
  color: #333;
  background-color: #f9f9f9; /* 浅背景色 */
}

/* 内部容器：铺满picker，确保点击区域覆盖整个容器 */
.picker-container {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
}

/* 选择器文字 */
.picker-text {
  font-size: 28rpx;
  color: #666;
}

/* 右侧箭头 */
.picker-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  transform: rotate(45deg);
}

/* 选中状态 */
.form-picker.active {
  border-color: #007aff;
  background-color: #fff;
}
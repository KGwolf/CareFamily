.btn {
  height: 96rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* block */
.btn--block {
  width: 100%;
}

/* primary */
.btn--primary {
  background: #1677ff;
  color: #fff;
}

/* secondary */
.btn--secondary {
  background: #f5f5f5;
  color: #333;
}

/* danger */
.btn--danger {
  background: #ff4d4f;
  color: #fff;
}

/* disabled */
.btn--disabled {
  background: #d9d9d9;
  color: #999;
}

/* loading */
.loading {
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid rgba(255,255,255,.4);
  border-top-color: #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

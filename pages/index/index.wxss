/* 全局重置 */
page {
  background-color: #F5F7FA;
  font-family: PingFang SC, Microsoft YaHei, sans-serif;
}

/* 页面容器 */
.page-container {
  min-height: 100vh;
  box-sizing: border-box;
}

/* 状态栏占位 */
.status-bar {
  height: var(--status-bar-height);
  width: 100%;
}

/* 主内容区 */
.content-wrap {
  padding: 20rpx 24rpx;
  box-sizing: border-box;
}

/* 顶部卡片 */
.top-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  display: block;
  margin-bottom: 28rpx;
}

.stats-row {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-img {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 12rpx;
}

.stat-num-wrap {
  display: flex;
  align-items: baseline;
}

.stat-num {
  font-size: 36rpx;
  font-weight: 600;
  margin-right: 8rpx;
}

/* 待执行数字颜色 */
.stat-item:nth-child(2) .stat-num {
  color: #FF7D00;
}

/* 已完成数字颜色 */
.stat-item:nth-child(3) .stat-num {
  color: #00C48C;
}

.stat-text {
  font-size: 24rpx;
  color: #666666;
}

/* 事项区域 */
.task-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  display: block;
  margin-bottom: 20rpx;
}

/* 事项卡片 */
.task-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.avatar {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.name-wrap {
  display: flex;
  align-items: center;
}

.name-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-right: 12rpx;
}

.age-text {
  font-size: 24rpx;
  color: #999999;
}

/* 事项列表 */
.task-list {
  width: 100%;
}

.task-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.task-item:last-child {
  margin-bottom: 0;
}

.icon-clock {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.time-text {
  font-size: 26rpx;
  color: #666666;
  width: 100rpx;
}

.task-text {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
}

/* 复选框样式重置 */
.checkbox {
  width: 36rpx;
  height: 36rpx;
  border-radius: 6rpx;
  border: 2rpx solid #DCDCDC;
  background-color: #FFFFFF;
}

/* 选中的复选框 */
checkbox[checked] {
  background-color: #00C48C;
  border-color: #00C48C;
  background-image: url("data:image/png;base64,");
  background-size: 24rpx 24rpx;
  background-repeat: no-repeat;
  background-position: center;
}

/* 添加按钮 */
.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 88rpx;
  background-color: #E8F5FF;
  color: #1677FF;
  font-size: 30rpx;
  border-radius: 12rpx;
  border: none;
  padding: 0;
  margin-bottom: 100rpx;
}

.add-btn::after {
  border: none;
}

.icon-plus {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.btn-text {
  font-size: 30rpx;
  font-weight: 500;
}

/* 底部导航栏 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 98rpx;
  background-color: #FFFFFF;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #F0F0F0;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  opacity: 0.5;
}

.tab-icon.active {
  opacity: 1;
}
/* 全局重置 */
page {
  background-color: #F5F7FA;
  font-family: PingFang SC, Microsoft YaHei, sans-serif;
}

/* 页面容器 */
.page-container {
  width: 100%;
  /* 页面高度占满屏幕，排除导航栏高度，配合 flex 布局 */
  height: 100vh;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
}

/* 状态栏占位 */
.status-bar {
  height: var(--status-bar-height);
  width: 100%;
}

/* 主内容区：自适应剩余高度，内部用 flex 垂直布局 */
.content-wrap {
  flex: 1; /* 填满 page-container 除了顶部 navigation-bar 的剩余空间 */
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  /* 关键：避免 content-wrap 自身滚动，让 task-section 单独滚动 */
  overflow: hidden;
}

/* 顶部卡片：固定高度，不参与自适应 */
.top-card {
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

/* 顶部卡片内部样式（保持原有样式不变，仅补充） */
.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}
.stats-row {
  display: flex;
  justify-content: space-between;
}
.stat-item {
  display: flex;
  align-items: center;
  flex-direction: column;
}
.stat-img {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}
.stat-text {
  font-size: 24rpx;
  color: #666;
}
.stat-num-wrap {
  display: flex;
  align-items: center;
}
.stat-num {
  font-size: 28rpx;
  color: #e63946;
  font-weight: bold;
  margin-right: 5rpx;
}

/* 待执行数字颜色 */
.stat-item:nth-child(2) .stat-num {
  color: #FF7D00;
}

/* 已完成数字颜色 */
.stat-item:nth-child(3) .stat-num {
  color: #00C48C;
}

.stat-text {
  font-size: 24rpx;
  color: #666666;
}

/* 待执行事项区域：核心配置 */
.task-section {
  /* 关键1：flex:1 自动填充 content-wrap 顶部卡片和底部按钮之间的剩余高度 */
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  /* 关键2：overflow-y: auto 开启垂直滚动，内容超出时可滑动 */
  overflow-y: auto;
  /* 隐藏滚动条（可选，优化视觉体验） */
  -webkit-overflow-scrolling: touch; /* 开启IOS弹性滚动，提升流畅度 */
  scrollbar-width: none; /* 火狐隐藏滚动条 */
}
/* 微信小程序隐藏滚动条（兼容安卓/IOS） */
.task-section::-webkit-scrollbar {
  display: none;
}


/* task-section 内部样式（保持原有样式不变，仅补充） */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
  margin-left: 22rpx;
}

/* 事项卡片 */
.task-card {
  width: 100%;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 1rpx 5rpx rgba(0,0,0,0.06);
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.name-wrap {
  display: flex;
  align-items: center;
}
.name-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-right: 10rpx;
}
.age-text {
  font-size: 24rpx;
  color: #999;
}

/* 事项列表 */
.task-list {
  width: 100%;
}

.task-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.task-item:last-child {
  margin-bottom: 0;
}

.icon-clock {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.time-text {
  font-size: 26rpx;
  color: #999;
  margin-right: 15rpx;
  width: 120rpx;
}
.task-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

/* 复选框样式重置 */
.checkbox {
  width: 36rpx;
  height: 36rpx;
  border-radius: 6rpx;
  border: 2rpx solid #DCDCDC;
  background-color: #FFFFFF;
}

/* 选中的复选框 */
checkbox[checked] {
  background-color: #00C48C;
  border-color: #00C48C;
  background-image: url("data:image/png;base64,");
  background-size: 24rpx 24rpx;
  background-repeat: no-repeat;
  background-position: center;
}

/* 添加按钮：固定在 content-wrap 底部，不参与滚动 */
.add-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #42b983;
  color: #fff;
  border-radius: 12rpx;
  border: none;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  /* 避免按钮被 task-section 滚动遮挡 */
  position: relative;
  z-index: 10;
}
.icon-plus {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}
.btn-text {
  font-size: 30rpx;
}

/* 底部导航栏 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 98rpx;
  background-color: #FFFFFF;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #F0F0F0;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  opacity: 0.5;
}

.tab-icon.active {
  opacity: 1;
}